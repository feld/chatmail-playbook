[params]

# mail domain (MUST be set to fully qualified chat mail domain)
mail_domain = {{ chatmail.domain }}

#
# Restrictions on user addresses
#

# how many mails a user can send out per minute
max_user_send_per_minute = {{ chatmail.max_user_send_per_minute }}

# maximum mailbox size of a chatmail address
max_mailbox_size = {{ chatmail.max_mailbox_size }}

# maximum message size for an e-mail in bytes
max_message_size = {{ chatmail.max_message_size }}

# days after which mails are unconditionally deleted
delete_mails_after = {{ chatmail.delete_mails_after }}

# days after which users without a successful login are deleted (database and mails)
delete_inactive_users_after = {{ chatmail.delete_inactive_users_after }}

# minimum length a username must have
username_min_length = {{ chatmail.username_min_length }}

# maximum length a username can have
username_max_length = {{ chatmail.username_max_length }}

# minimum length a password must have
password_min_length = {{ chatmail.password_min_length }}

# list of chatmail addresses which can send outbound un-encrypted mail
passthrough_senders = {{ chatmail.passthrough_senders }}

# list of e-mail recipients for which to accept outbound un-encrypted mails
# (space-separated)
passthrough_recipients = {{ chatmail.passthrough_recipients }}

#
# Deployment Details
#

# where the filtermail SMTP service listens
filtermail_smtp_port = {{ chatmail.filtermail_smtp_port }}

# postfix accepts on the localhost reinject SMTP port
postfix_reinject_port = {{ chatmail.postfix_reinject_port }}

# if set to "True" IPv6 is disabled
disable_ipv6 = {{ chatmail.disable_ipv6 }}

# Address on which `mtail` listens
mtail_address = {{ chatmail.mtail.address }}

#
# Debugging options 
#

# set to True if you want to track imap protocol execution
# in per-maildir ".in/.out" files. 
imap_rawlog = {{ chatmail.imap_rawlog }}

#
# Privacy Policy
#

# postal address of privacy contact
privacy_postal = {{ chatmail.privacy_postal }}

# email address of privacy contact
privacy_mail = {{ chatmail.privacy_mail }}

# postal address of the privacy data officer
privacy_pdo = {{ chatmail.privacy_pdo }}

# postal address of the privacy supervisor
privacy_supervisor = {{ chatmail.privacy_supervisor }} 